<h1>New article</h1>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>

  <div class="formFields">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="formFields">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <div class="formFields">
    <%= f.submit 'Create' %>
  </div>
<% end %>

<%= link_to 'Back', articles_path %>